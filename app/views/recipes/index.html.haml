.card.recipe_list
  .title
    Recipes
    =link_to image_tag('add_button.png', class: 'add_recipe'), '/recipes/new'
  .body
    %table
      -@recipes.each do |recipe|
        %tr
          %td.recipe_name
            =link_to(recipe.name,"/recipe/#{recipe.id}")
            =link_to image_tag('delete-button.png'), "/recipe/#{recipe.id}", {method: :delete, class: 'delete_button'}
