.card.recipe_card
  .title
    =link_to image_tag("Back-Button.png"), recipes_path, {method: :get, class: 'circular_nav_button'}
    =@recipe.name
    =link_to 'edit', edit_recipe_path(@recipe.id)
    =link_to image_tag("delete-button.png"), recipe_path(@recipe.id), {method: :delete, class: 'square_nav_button', data:{confirm: "Are you sure you want to delete #{@recipe.name}"}}
  .body
    .ingredients_pane
      %table
        .col_header
          Ingredients
        %tb
        -@recipe.recipe_ingredients.each do |recipe_ingredient|
          %tr
            %td=recipe_ingredient.ingredient.name
            %td=recipe_ingredient.measurement
    .directions_pane
      .col_header Directions
      %ul
      -@recipe.directions.each do |direction|
        %li=direction
