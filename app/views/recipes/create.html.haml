.card.recipe_card
  =form_for(@new_recipe) do |recipe|
    =recipe.text_field :name, placeholder: 'Recipe Name', class: 'title'
    .ingredients_pane
      %table
        .col_header
          Ingredients
        %tb
          =fields_for(:recipe_ingredient) do |ingredient|
            %td
              =ingredient.text_field :ingredient, placeholder: 'Ingredient'
              =ingredient.text_field :measurement, placeholder: 'Measurement'
          =fields_for(:recipe_ingredient) do |ingredient|
            %td
              =ingredient.text_field :ingredient, placeholder: 'Ingredient'
              =ingredient.text_field :measurement, placeholder: 'Measurement'
    .directions_pane
      .col_header Directions
      =recipe.text_area :directions, placeholder: 'Directions'
    =recipe.submit

